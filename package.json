{
  "name": "sql-parser-cst",
  "description": "Parses SQL into Concrete Syntax Tree (CST)",
  "license": "GPL-2.0-or-later",
  "version": "0.3.0",
  "main": "lib/parser.js",
  "types": "lib/parser.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/nene/sql-parser-cst"
  },
  "bugs": {
    "url": "https://github.com/nene/sql-parser-cst/issues"
  },
  "files": [
    "lib/",
    "AUTHORS"
  ],
  "scripts": {
    "prepublishOnly": "yarn test && yarn build",
    "pretty": "prettier --write .",
    "generate": "ts-node ./generate.ts",
    "watch:generate": "npm-watch",
    "clean": "rm -rf lib; rm -f src/dialects/*.js",
    "copy": "cp -R src/keywords lib/ && cp -R src/dialects lib/ && cp src/sql.d.ts lib/",
    "build": "yarn clean && yarn generate && tsc && yarn copy",
    "test:mysql": "jest --config test/config/mysql.json",
    "test:sqlite": "jest --config test/config/sqlite.json",
    "test": "yarn generate && yarn test:mysql && yarn test:sqlite",
    "perf": "yarn ts-node perf/perf-test.ts"
  },
  "devDependencies": {
    "@types/benchmark": "^2.1.2",
    "@types/jest": "^29.1.2",
    "benchmark": "^2.1.4",
    "dedent-js": "^1.0.1",
    "jest": "^29.1.2",
    "npm-watch": "^0.11.0",
    "peggy": "^2.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "watch": {
    "generate": "src/sql.pegjs"
  }
}
