{
  "name": "sql-parser-cst",
  "description": "Parses SQL into Concrete Syntax Tree (CST)",
  "license": "GPLv2",
  "main": "lib/parser.js",
  "types": "lib/parser.d.ts",
  "private": true,
  "scripts": {
    "pretty": "prettier --write .",
    "generate": "ts-node pegjs/generate.ts",
    "watch:generate": "npm-watch",
    "build": "yarn generate && tsc",
    "test:mysql": "yarn generate mysql && jest --config test/config/mysql.json",
    "test:sqlite": "yarn generate sqlite && jest --config test/config/sqlite.json",
    "test": "yarn test:mysql && yarn test:sqlite"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "jest": "^29.1.2",
    "npm-watch": "^0.11.0",
    "peggy": "^2.0.1",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "watch": {
    "generate": "pegjs/sql.pegjs"
  }
}
